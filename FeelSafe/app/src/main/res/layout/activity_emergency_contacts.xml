<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimage"
    tools:context="com.example.dell.alwayswithu.EmergencyContacts">

    <android.support.v7.widget.Toolbar
        android:id="@+id/rctoolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="backArrowEmergencyContacts"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Contacts"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:gravity="center"
            android:layout_marginStart="90dp"
            android:textAlignment="center" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:id="@+id/rl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name1"
                android:text="Police"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="16dp"
                android:fontFamily="casual"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name1"
                android:layout_below="@+id/name1"
                android:fontFamily="casual"
                android:text="100"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/number1"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_call_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name2"
                android:text="Fire"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="16dp"
                android:layout_below="@id/number1"
                android:fontFamily="casual"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name1"
                android:layout_below="@+id/name2"
                android:fontFamily="casual"
                android:text="101"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/number2"
                android:layout_alignStart="@+id/iv1"
                android:src="@drawable/ic_call_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name3"
                android:text="Ambulance"
                android:textStyle="bold"
                android:textSize="23sp"
                android:layout_below="@id/number2"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="16dp"
                android:fontFamily="casual"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name1"
                android:layout_below="@+id/name3"
                android:fontFamily="casual"
                android:text="102"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/number3"
                android:layout_alignStart="@+id/iv2"
                android:src="@drawable/ic_call_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name4"
                android:text="Disaster Management"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/number3"
                android:layout_marginTop="16dp"
                android:fontFamily="casual"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/number4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name1"
                android:layout_below="@+id/name4"
                android:fontFamily="casual"
                android:text="108"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/number4"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_call_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name5"
                android:text="Missing Child/Woman"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/number4"
                android:layout_marginTop="16dp"
                android:fontFamily="casual"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/number5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name1"
                android:layout_below="@+id/name5"
                android:fontFamily="casual"
                android:text="1094"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/number5"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_call_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name6"
                android:text="Crime Against Woman"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/number5"
                android:layout_marginTop="16dp"
                android:fontFamily="casual"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/number6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name1"
                android:layout_below="@+id/name6"
                android:fontFamily="casual"
                android:text="1096"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/number6"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_call_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name7"
                android:text="Anti-Extortion"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/number6"
                android:layout_marginTop="16dp"
                android:fontFamily="casual"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/number7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name1"
                android:layout_below="@+id/name7"
                android:fontFamily="casual"
                android:text="1097"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/number7"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_call_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name8"
                android:text="Emergency Medical"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/number7"
                android:layout_marginTop="16dp"
                android:fontFamily="casual"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/number8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name1"
                android:layout_below="@+id/name8"
                android:fontFamily="casual"
                android:text="1056"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/number8"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_call_black_24dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
